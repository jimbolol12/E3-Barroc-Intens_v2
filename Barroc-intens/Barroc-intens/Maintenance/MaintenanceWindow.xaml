<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Barroc_intens.MaintenanceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_intens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localData="using:Barroc_intens.Model"
    mc:Ignorable="d">


    <Grid>
        <Button Content="Inkomende Storingen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Click="Button_Click"/>
        
        
        
        <!-- Rechterkant -->
        <ListView x:Name="companieListView"
              Grid.Column="1">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="localData:">
                    <StackPanel Margin="20">
                        <TextBlock>
                        <Run FontWeight="Bold" Text="Naam:" ></Run>
                        <Run Text="{x:Bind Name}"></Run>
                        </TextBlock>
                        <TextBlock>
                        <Run FontWeight="Bold" Text="telefoon nummer:"></Run>
                        <Run Text="{x:Bind Phone}"></Run>
                        </TextBlock>
                        <TextBlock>
                        <Run FontWeight="Bold" Text="Straat:"></Run>
                        <Run Text="{x:Bind Street}"></Run>
                        </TextBlock>
                        <TextBlock>
                        <Run FontWeight="Bold" Text="huisnummer:"></Run>
                        <Run Text="{x:Bind HouseNumber}"></Run>
                        </TextBlock>
                        <TextBlock>
                        <Run FontWeight="Bold" Text="Stad:"></Run>
                        <Run Text="{x:Bind City}"></Run>
                        </TextBlock>
                        <TextBlock>
                        <Run FontWeight="Bold" Text="BKR Voldaan op: "/>
                        <Run Text="{x:Bind BkrCheckedAt}"/>
                        </TextBlock>
                        <TextBlock>
                        <Run FontWeight="Bold" Text="Username: "/>
                        <Run Text="{x:Bind Contact.Username}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
