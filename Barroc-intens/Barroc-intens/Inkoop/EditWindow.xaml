<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Barroc_intens.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Barroc_intens"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Background="#FDD716">
            <Button x:Name="bBack"
                    Content="Terug"
                    Click="bBack_Click"
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="Black" />
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel Orientation="Vertical"
                        Margin="10">

                <TextBlock x:Name="MessageBox" />

                <TextBox x:Name="tbProductname"
                         Header="Name"
                         Margin="5" />
                <TextBox x:Name="tbProductdimensions"
                         Header="Dimensions"
                         Margin="5" />
                <TextBox x:Name="tbProductdescription"
                         Header="Description"
                         Margin="5" />
                <TextBox x:Name="tbProductprice"
                         Header="Price"
                         Margin="5" />

            </StackPanel>

            <Button x:Name="BSave"
                    Content="Save"
                    VerticalAlignment="Bottom"
                    Margin="10,20,20,20"
                    Background="#FDD716"
                    Click="BSave_Click" />
        </Grid>
    </Grid>
</Window>
