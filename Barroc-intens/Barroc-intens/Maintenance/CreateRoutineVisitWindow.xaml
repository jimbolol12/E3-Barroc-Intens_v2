<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Barroc_intens.Maintenance.CreateRoutineVisitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_intens.Maintenance"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="10">

            <TextBlock x:Name="MessageBox"></TextBlock>

            <TextBox x:Name="tbRequestId"
                     Header="Id"
                     Margin="0,5,0,0" />

            <TextBox x:Name="tbUserlocation"
                     Header="Location"
                     Margin="0,10,0,0" />

            <TextBox x:Name="tbEmployeeid"
                     Header="Employee"
                     Margin="0,10,0,0" />

            <CalendarDatePicker x:Name="cdpVisitDate"
                                Header="Date"
                                Margin="0,10,0,0" />

            <TextBox x:Name="tbDescription"
                     Header="Description"
                     Margin="0,10,0,0" />
        </StackPanel>

        <Button x:Name="bCreate"
                Content="Create"
                VerticalAlignment="Bottom"
                Margin="20"
                Click="bCreate_Click" />
    </Grid>
</Window>
